!! Appearance
urxvt.termName:         rxvt-unicode
urxvt.scrollBar:        false
urxvt.cursorColor:      #ffffff
urxvt.background:       [90]#1e1e1e
urxvt.foreground:       #ffffff
urxvt.intensityStyles:  false
urxvt.iso14755:         false
urxvt.iso14755_52:      false

!! Font preferences
urxvt.font:     xft:monospace:pixelsize=13
urxvt.boldFont: xft:monospace:pixelsize=13:weight=bold

!! Larger history limit
urxvt.saveLines: 1000000

!! Perl extensions
urxvt.perl-ext-common: default,matcher,font-size

!! Open URLs in browser with Control-Click
urxvt.urlLauncher:      /usr/bin/firefox
urxvt.matcher.button:   C1

!! Change font size on Control-Plus/Minus
urxvt.keysym.Control-0x2b: perl:font-size:increase
urxvt.keysym.Control-0x2d: perl:font-size:decrease

!! Color scheme

! black
urxvt.color0:   #00070d
urxvt.color8:   #161616

! red
urxvt.color1:   #cc042f
urxvt.color9:   #d6779c

! green
urxvt.color2:   #3aa842
urxvt.color10:  #88c661

! yellow
urxvt.color3:   #ccc128
urxvt.color11:  #f9ee98

! blue
urxvt.color4:   #4a6fb5
urxvt.color12:  #8cd6e2

! magenta
urxvt.color5:   #713aa8
urxvt.color13:  #9b859d

! cyan
urxvt.color6:   #3aa871
urxvt.color14:  #afc4db

! white
urxvt.color7:   #a6a6a6
urxvt.color15:  #ffffff